// Retorna a altura de um nÃ³
int altura(Node* n) {
    if (n == NULL)
        return 0;
    return n->altura;
}

// Retorna o maior entre dois nÃºmeros
int max(int a, int b) {
    return (a > b) ? a : b;
}

// Calcula o fator de balanceamento de um nÃ³
int fatorBalanceamento(Node* n) {
    if (n == NULL)
        return 0;
    return altura(n->esquerda) - altura(n->direita);
}
